@model IEnumerable<AkalTrucking.Models.Fuel>

@{
    ViewBag.Title = "Fuel Record For This Week";
}

@Html.AntiForgeryToken()

<h3>@ViewBag.Title</h3>
<hr />

<form class="form-horizontal">
    <fieldset>
        <div class="col-lg-4">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">Gross Information</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr class="danger">
                                <th>
                                    Description
                                </th>
                                <th>
                                    Amount
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Total Weekly Gross
                                </td>
                                <td>
                                    $@ViewBag.FuelGross
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Discount
                                </td>
                                <td>
                                    $@ViewBag.FuelDiscount
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Total Amount
                                </td>
                                <td>
                                    $@ViewBag.FuelTotal
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </fieldset>
</form>


<form class="form-horizontal">
    <fieldset>
        <h4>Fuel Details:</h4>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr class="warning">
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th>
                        Truck Number
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Diesel Gallons
                    </th>
                    <th>
                        Diesel Amount
                    </th>
                    <th>
                        Discount
                    </th>
                    <th>
                        Net Per Gallon
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Other)
                    </th>
                    <th>
                        Invoice Total
                    </th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit_)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ST)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diesel_Gal)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Diesel_Amt)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Discnt)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Net_P_G)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Other)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Invoice_Tot)
                        </td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</form>
