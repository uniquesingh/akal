@model AkalTrucking.Models.WeeklyLoadFuel

@{
    ViewBag.Title = "Gross For This Week";
}

@Html.AntiForgeryToken()

<h3>@ViewBag.Title</h3>
<hr />


<form class="form-horizontal">
    <fieldset>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Load Gross Information</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr class="warning">
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-success">
                                    <td>
                                        Total Weekly Gross
                                    </td>
                                    <td>
                                        $@ViewBag.LoadGross.00
                                    </td>
                                </tr>
                                <tr class="text-danger">
                                    <td>
                                        Quick Pay
                                    </td>
                                    <td>
                                        -$@ViewBag.QuickPay
                                    </td>
                                </tr>
                                <tr class="text-danger">
                                    <td>
                                        Dispatch
                                    </td>
                                    <td>
                                        -$@ViewBag.Dispatch
                                    </td>
                                </tr>
                                <tr class ="text-success">
                                    <td>
                                        Total Amount
                                    </td>
                                    <td>
                                        $@ViewBag.TotalLoadAmt
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Fuel Gross Information</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr class="warning">
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="text-success">
                                    <td>
                                        Total Weekly Gross
                                    </td>
                                    <td>
                                        $@ViewBag.FuelGross
                                    </td>
                                </tr>
                                <tr class="text-danger">
                                    <td>
                                        Discount
                                    </td>
                                    <td>
                                        -$@ViewBag.FuelDiscount
                                    </td>
                                </tr>
                                <tr class="text-success">
                                    <td>
                                        Total Amount
                                    </td>
                                    <td>
                                        $@ViewBag.FuelTotal
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>


<form class="form-horizontal">
    <fieldset>
            <h4>Load Details:</h4>
        <hr />
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="info">
                        <th>
                            Load Number
                        </th>
                        <th>
                            PickUp Date
                        </th>
                        <th>
                            PickUp City, State
                        </th>
                        <th>
                            DropOff Date
                        </th>
                        <th>
                            DropOff City, State
                        </th>
                        <th>
                            Trailer Number
                        </th>
                        <th>
                            Rate
                        </th>
                        @*<th>
                            Action
                        </th>*@
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LoadsList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Load_Number)
                            </td>
                            <td>
                                @Html.ValueFor(modelItem => item.First_Pickup, "{0:dd/MM/yyyy}")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.P_U_City)
                                , 
                                @Html.DisplayFor(modelItem => item.P_U_State_Prov)
                            </td>
                            <td>
                                @Html.ValueFor(modelItem => item.Last_Drop_off, "{0:dd/MM/yyyy}")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.D_O_City)
                                ,
                                @Html.DisplayFor(modelItem => item.D_O_State_Prov)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Trailer_Number)
                            </td>
                            <td>
                                $@Html.DisplayFor(modelItem => item.Rate).00
                            </td>
                            @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>*@
                        </tr>
                    }
                </tbody>
            </table>
    </fieldset>
</form>


<form class="form-horizontal">
    <fieldset>
        <h4>Fuel Details:</h4>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Date
                    </th>
                    <th>
                        Time
                    </th>
                    <th>
                        Truck Number
                    </th>
                    <th>
                        Name, City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Diesel Gallons
                    </th>
                    <th>
                        Diesel Amount
                    </th>
                    <th>
                        Discount
                    </th>
                    <th>
                        Net Per Gallon
                    </th>
                    <th>
                        Other
                    </th>
                    <th>
                        Invoice Total
                    </th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FuelList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit_)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                            ,
                            @Html.DisplayFor(modelItem => item.ST)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diesel_Gal)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Diesel_Amt)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Discnt)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Net_P_G)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Other)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Invoice_Tot)
                        </td>
                        @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</form>