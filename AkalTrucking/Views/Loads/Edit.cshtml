@model IEnumerable<AkalTrucking.Models.Load>
@{
    ViewBag.Title = "Edit Load Information";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>@ViewBag.Title</h3>
    <hr />
    <p class="text-info">Please Make your changes :-</p>
    <table class="table">
        <tr>
            <th>
                Load Number
            </th>
            <th>
                Pickup Date
            </th>
            <th>
                City, State
            </th>
            <th>
                Drop Off
            </th>
            <th>
                City, State
            </th>
            <th>
                Trailer Number
            </th>
            <th>
                Rate
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Load_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Pickup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.P_U_City)
                    ,
                    @Html.DisplayFor(modelItem => item.P_U_State_Prov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Last_Drop_off)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.D_O_City)
                    ,
                    @Html.DisplayFor(modelItem => item.D_O_State_Prov)
                </td>
                <td>                
                    @Html.EditorFor(modelItem => item.Trailer_Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.Trailer_Number, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Rate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => item.Rate, "", new { @class = "text-danger" })
                    @Html.HiddenFor(modelItem => item.Id)
                </td>
            </tr>
        }

    </table>

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-11 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-11 col-md-10">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}